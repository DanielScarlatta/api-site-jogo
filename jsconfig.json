{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@modules/*": ["src/modules/*"],
      "@routers/*": ["src/routers/*"],
      "@services/*": ["src/services/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}